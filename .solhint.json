{
  "extends": "solhint:recommended",
  "rules": {
    "prettier/prettier": "error",
    "compiler-version": [
      "error",
      "0.8.4"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "avoid-low-level-calls": "off",
    "no-inline-assembly": "off",
    "no-complex-fallback": "off",
    "quotes": "single"
  },
  "plugins": ["prettier"]
}
